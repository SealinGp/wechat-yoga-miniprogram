.wrapper {
    height: 30vh;
    position: relative;
    margin-bottom: 120rpx;
    display: flex;
    align-items: center;
    padding-bottom: 24rpx;
    border-bottom-left-radius: 32rpx;
    border-bottom-right-radius: 32rpx;
}
.header-box {
    margin-left: 40rpx;
    display: flex;
    align-items: center;
    color: #333;
}
.header-box .avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
}
.header-box .r {
    margin-left: 32rpx;
    font-size: 40rpx;
    color: #fff;
}
.items {
    position: absolute;
    box-shadow: 0px 8rpx 16rpx 0 rgb(0 0 0 / 4%);
    border-radius: 24rpx;
    padding: 0 24px;
    height: 128rpx;
    background: #fff;
    margin: 0 24rpx;
    bottom: -80rpx;
    right: 0;
    left: 0;
    display: flex;
    justify-content: space-around;
  }
  .item {
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #666;
  }
  .text {
    margin-bottom: 8rpx;
    color: #333;
  }