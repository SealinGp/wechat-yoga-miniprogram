.usesxt {
  background-color: #fff;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  transform: translateY(100%);
  transition: transform 250ms;
}
.usesxt.active {
  transform: translateY(0);
}
.lfyxcl {
  padding: 32rpx;
  position: absolute;
  bottom: 0;
  overflow-y: auto;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.title {
  padding: 16rpx 0;
  color: #333;
  font-size: 32rpx;
}

.close {
  background-image: url(data:image/png;base64,);
  width: 40rpx;
  height: 40rpx;
  background-size: 40rpx 40rpx;
  background-repeat: no-repeat;
  background-position: center center;
  padding: 16rpx;
}

.input {
  margin: 0;
  color: #333;
  font-size: 28rpx;
  font-family: inherit;
  background-color: #fff;
  border-bottom: 2rpx solid #ddd;
  border-radius: 0;
  width: 100%;
  height: 96rpx;
  line-height: 92rpx;
  box-sizing: border-box;
}

.input-wrapper {
  font-family: "pingfang SC", "helvetica neue", arial, "hiragino sans gb",
    "microsoft yahei ui", "microsoft yahei", simsun, sans-serif;
  font-size: 28rpx;
  line-height: 48rpx;
  margin: 0;
  padding: 0;
  width: 100%;
  display: block;
  margin-bottom: 48rpx;
  padding-bottom: 0;
}
.button {
  font-family: PingFangSC-Light, "STHeiti Light", "helvetica neue",
    "hiragino sans gb", arial, "microsoft yahei ui", "microsoft yahei", simsun,
    sans-serif;
  margin: 0;
  color: #fff;
  white-space: nowrap;
  border: 2rpx solid transparent;
  background-color: #0092ee;
  height: 88rpx;
  line-height: 84rpx;
  padding: 0 48rpx;
  font-size: 32rpx;
  display: block;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
  border-radius: 700rpx;
}
