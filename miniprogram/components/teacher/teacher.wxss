.wrapper {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    overflow: hidden;
    border-radius: 16rpx;
    flex-shrink: 0;
    margin-right: 16rpx;
    position: relative;
    width: 192rpx;
    box-shadow: 0 0 0 2rpx #dadce0;
}

.image {
    transform-origin: top left;
    overflow: hidden;
    position: relative;
    width: 192rpx;
    height: 192rpx;
    background: #fff;
}

.image>image {
    width: 100%;
    height: 100%;
}

.name {
    overflow: hidden;
    text-overflow: ellipsis;
    color: #202124;
    font-size: 28rpx;
    line-height: 38rpx;
    margin: 16rpx;
    margin-top: 14rpx;
    white-space: normal;
    width: 160rpx;
    word-wrap: normal;
    margin-bottom: 8rpx;
}

.subtitle {
    overflow: hidden;
    text-overflow: ellipsis;
    font-family: Roboto, Helvetica Neue, Arial, sans-serif;
    font-size: 24rpx;
    line-height: 32rpx;
    margin-bottom: 16rpx;
    margin-left: 16rpx;
    margin-right: 16rpx;
    -webkit-box-orient: vertical;
    color: #70757a;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    white-space: normal;
    width: 160rpx;
    margin-top: 0rpx;
}

.teachers {
    padding: 26rpx 32rpx 32rpx;
    background: #fff;
    box-shadow: 0 0 0 1px #ebedef;
    display: inline-flex;
    align-items: stretch;
    overflow-x: scroll;
    width: 100%;
}

.teachers::-webkit-scrollbar {
    display: none;
}

.title {
    color: #4d5156;
    display: flex;
    position: relative;
    padding: 32rpx 32rpx 24rpx;
    background-color: #fff;
    margin-top: 20rpx;
}