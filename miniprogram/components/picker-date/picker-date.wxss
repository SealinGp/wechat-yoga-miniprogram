.date {
  align-items: center;
  justify-content: space-between;
  display: flex;
}

.date-item {
  align-items: center;
  box-sizing: border-box;
  display: flex;
  flex: 1 1 auto;
  height: 80rpx;
  min-width: 0;
  padding: 2rpx;
  position: relative;
  -webkit-user-select: none;
  border: 1px solid #dadce0;
}

.date-arrow {
  display: flex;
  height: 100%;
  justify-content: center;
  overflow: hidden;
  flex: 0 1 64rpx;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 48rpx 48rpx;
  background-image: url("data:image/svg+xml;utf8,<svg fill='rgb(95, 99, 104)' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24'><path d='M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z'></path></svg>");
}

.date-text {
  text-size-adjust: 100%;
  -webkit-font-smoothing: auto;
  visibility: visible;
  font-weight: 400;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #202124;
  -webkit-user-select: none;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1 0 auto;
  min-width: 0;
  text-align: center;
  padding: 0;
}
.icon {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 32rpx;
  width: 32rpx;
  background-position: center center;
  background-repeat: no-repeat;
  background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='rgb(95, 99, 104)'><path d='M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20a2 2 0 0 0 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z'></path><path d='M8 11c-.55 0-1 .45-1 1s.45 1 1 1 1-.45 1-1-.45-1-1-1zm4 0c-.55 0-1 .45-1 1s.45 1 1 1 1-.45 1-1-.45-1-1-1zm4 0c-.55 0-1 .45-1 1s.45 1 1 1 1-.45 1-1-.45-1-1-1z'></path></svg>");
}
.text{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
}