.user-item {
    border-top: 2rpx solid #dadce0;
    padding: 16rpx 0;
    min-height: 86rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;

}

.user-item-text {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #202124;
    margin-left: 12rpx;
}



.user-item-subtext {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #202124;
    margin-left: 12rpx;
}


.user-item-image {
    width: 72rpx;
    height: 72rpx;
    border-radius: 8rpx;
}

.user-item-action {
    font-size: 24rpx;
    line-height: 22rpx;
    color: #5f6368;
}

.disabled .user-item-action,
.disabled .user-item-text,
.disabled .title,
.disabled .subtitle,
.disabled .header-subtitle,
.disabled .header-date {
    color: #C6C6C6;
}

.title {
    line-height: 48rpx;
    font-size: 40rpx;
    padding: 8rpx 0 0 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.subtitle {
    font-size: 36rpx;
    line-height: 48rpx;
    color: #202124;
    margin-bottom: 24rpx;
    margin-top: 32rpx;
}

.lesson-action {

    font-size: 28rpx;
    font-weight: 500;
    line-height: 40rpx;
    box-shadow: 0rpx 2rpx 4rpx 0rpx rgba(60, 64, 67, .30), 0rpx 2rpx 6rpx 2rpx rgba(60, 64, 67, .15);
    border-radius: 48rpx;
    color: #3c4043;
    background-color: #fff;
    padding: 0 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 60rpx;
}



.top {
    display: block;
    width: 100%;
    padding-bottom: 33.3333%;
    position: relative;
}

.top-image {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    position: absolute;
    box-shadow: rgba(0, 0, 0, 0.03) 0rpx 0rpx 4rpx inset;
    left: 32rpx;
    top: calc(100% - 90rpx);
}

