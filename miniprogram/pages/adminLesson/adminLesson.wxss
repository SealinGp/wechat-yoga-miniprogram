.gap {
    flex-grow: 1
}

.header-action-wrapper {
    padding: 24rpx 0;
    display: flex
}

.wrapper {
    padding: 0 32rpx
}

.header-subtitle {
    font-size: 30rpx;
    line-height: 40rpx;
    color: rgb(83, 100, 113);
}

.header-date {
    margin: 24rpx 0;
    color: rgb(83, 100, 113);
    font-size: 30rpx;
    display: flex;
    align-items: center;
}

.header-date-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 8rpx;
    background-size: 100% 100%;
    background-image: url(data:image/svg+xml;base64,)
}

.button-delete {
    border-radius: 60rpx;
    line-height: 80rpx;
    color: #202124;
    background: #f1f3f4;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}