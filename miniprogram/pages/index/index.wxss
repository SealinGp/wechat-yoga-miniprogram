.market-container {
    height: 84rpx;
    background-size: 100%;
    padding: 0 8rpx 0 118rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-radius: 16rpx 16rpx 0 0;
    margin: 0 20rpx 0;
    background-repeat: no-repeat;
}

.market-title {
    font-size: 28rpx;
    color: #777060;
}

.market {
    height: 96rpx;
    padding: 32rpx;
    background-color: #fff;
}

.promotion-item-container {
    display: flex;
    align-items: center;
}

.notice {
    background: #fff;
    padding-bottom: 32rpx;
    color: #333;
}

/*
*/
.market-button {
    flex-shrink: 0;
    border: 2rpx solid #dadce0;
    font-size: 28rpx;
    line-height: 64rpx;
    height: 64rpx;
    border-radius: 60rpx;
    padding: 0 32rpx;
}

.market-text {
    -webkit-box-orient: vertical;
    color: #202124;
    display: -webkit-box;
    font-size: 32rpx;
    line-height: 40rpx;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0 16rpx 0 32rpx;
    flex-grow: 1;
}

.market-image {
    height: 96rpx;
    width: 96rpx;
    border-radius: 50%;
    flex-shrink: 0;
}

.card {
    position: absolute;
    height: auto;
    width: 600rpx;
    background: linear-gradient(-45deg, #303030, #191919);
    padding: 40rpx;
    overflow: hidden;
    border-radius: 24rpx;
    top: -25%;
    left: -25%;
}

.card-title {
    font-size: 48rpx;
    font-weight: 700;
    color: #f9cbab;
}

.card-subtitle {
    font-size: 68rpx;
    color: #f9cbab;
    font-weight: 500;
}

.header {
    width: 100vw;
    background-color: #fff;
    /* box-sizing: border-box;padding-left: {{paddingLeft}}px; */
}

.header-container {
    line-height: 40rpx;
    justify-content: center;
    display: flex;
    font-size: 28rpx;
    padding-left: 16rpx;
    flex-direction: column;
}

.header-swiper {
    font-size: 20rpx;
    color: #999;
    height: 32rpx;
}

.teacher-name {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    -webkit-line-clamp: 1;
    text-overflow: ellipsis;
}

.divider--hairline-right {
    margin: 0 0 0 32rpx;
}