
.market-action {
    width: 134rpx;
    height: 48rpx;
    background: #ff655d;
    border-radius: 24rpx;
    font-size: 24rpx;
    color: #fff;
    line-height: 48rpx;
    text-align: center;
    margin-right: 24rpx;
    background: linear-gradient(90deg, #ff973c 0%, #fc360c 100%);
}

.notice-box {
    width: 100vw;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #efeff4;
}

.notice-icon {
    width: 130rpx;
    height: 33rpx;
    margin-right: 10px;
}

/* 专业教练 */
.teachers {
    background: #fff;
    /* padding-bottom: 12rpx; */
    color: #333;
}

.teachers-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    overflow-x: auto;
    padding-bottom: 56rpx;
}

.teachers-container::-webkit-scrollbar {
    display: none;
}

.teachers-description {
    font-size: 24rpx;
    margin-top: 24rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    max-height: 2.5em;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 1.25;
    text-overflow: ellipsis;
}

.teachers-item {
    width: 200rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    border-right: 1rpx solid #dadce0;
    padding: 24rpx 36rpx;
    flex-shrink: 0;
}

.teachers-thumbnail {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.teachers-title {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    margin-top: 24rpx;
}

.teachers-type {
    color: #749b15;
    flex-shrink: 0;
}

.swiper-container {
    width: 750rpx;
    height: 375rpx;
    position: relative;
    z-index: 1;
}

.swiper-container .swiper1 {
    width: 750rpx;
    height: 375rpx;
}

.swiper-container .swiper1 image {
    width: 750rpx;
    height: 375rpx;
    /* margin: 8rpx 15rpx; */
    /* border-radius: 16rpx; */
}

.table-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 18rpx;
}

.weather-container {
    width: calc(100% - 48rpx);
    display: flex;
    font-size: 24rpx;
    align-items: center;
    padding: 12rpx 24rpx;
    background-color: rgb(240, 240, 240);
    color: rgb(100, 100, 100);
}

.weather-icon {
    height: 24rpx;
    width: 24rpx;
    margin-left: 6rpx;
}

.weather-location {
    color: rgb(100, 100, 100);
    margin-right: 12rpx;
}

.divider {
    display: flex;
    align-items: center;
    margin: 32rpx 0;
    color: #969799;
    font-size: 28rpx;
    line-height: 48rpx;
}

.divider--hairline {
    height: 1rpx;
    background: #ebedf0;
    margin-right: 32rpx;
    flex: 1;
}

