    display: flex;
    justify-content: center;
    font-size: 22rpx;
    color: rgba(0, 0, 0, 0.35);
    margin: 60rpx 0 32rpx 0;
}

.notices {
    display: flex;
    margin: 0 32rpx;
    flex-direction: column;
}

.notice-item-title {
    display: -webkit-box;
    -webkit-line-clamp: 1;
